{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@hooks/*": ["hooks/*"],
			"@models/*": ["models/*"],
			"@lib/*": ["lib/*"],
			"@pages/*": ["pages/*"]
		}
	},
	"include": ["vite.config.ts"]
}
